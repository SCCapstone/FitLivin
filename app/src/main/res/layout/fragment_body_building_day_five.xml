<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.BodyBuildingDayFive"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Military Press"
        android:id="@+id/militaryPressText"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="175dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:text="4 Sets of 8-10 Repetitions. 1 minute rest between sets"
        android:layout_marginBottom="155dp"
        android:id="@+id/militaryPressDetail"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:id="@+id/militaryPressImage"
        android:layout_gravity="right|top"
        android:layout_marginBottom="150dp"
        android:src="@drawable/militarypress"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="219dp"
        android:layout_height="63dp"
        android:text="Side Lateral Raises"
        android:id="@+id/sideRaiseText"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="40dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:id="@+id/sideLatImage"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="35dp"
        android:src="@drawable/dumbbelllatraise" />

    <TextView
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:text="4 Sets of 12 very light weight repetitions. "
        android:id="@+id/sideLatRaiseDetail"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="177dp"
        android:layout_height="34dp"
        android:text="4 sets of 10 repetitions."
        android:id="@+id/shoulderPressDetail"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="120dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="184dp"
        android:layout_height="59dp"
        android:text="Shoulder Press"
        android:id="@+id/shoulderPressText"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="125dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:id="@+id/shoulderpressImage"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="70dp"
        android:src="@drawable/shoulderpress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BODY BUILDING DAY 5"
        android:id="@+id/bbDay5"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Complete!"
        android:id="@+id/completeDay5bb"
        android:layout_gravity="right|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/BBBack"
        android:layout_gravity="left|bottom" />
    </LinearLayout>>

    </ScrollView>

</FrameLayout>
