<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.BodyBuildingDayFive"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background3"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BODY BUILDING DAY 5"
            android:id="@+id/bbDay5"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Military Press"
            android:id="@+id/militaryPressText"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bbDay5"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Sets of 8-10 Repetitions. 1 minute rest between sets"
            android:id="@+id/militaryPressDetail"
            android:layout_below="@+id/militaryPressText"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/militaryPressImage"
            android:layout_below="@+id/militaryPressDetail"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/militarypress"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side Lateral Raises"
            android:id="@+id/sideRaiseText"
            android:layout_below="@+id/militaryPressImage"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="32dp"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Sets of 12 very light weight repetitions. "
        android:id="@+id/sideLatRaiseDetail"
        android:layout_below="@+id/sideRaiseText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />


        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sideLatImage"
            android:layout_below="@+id/sideLatRaiseDetail"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/dumbbelllatraise" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoulder Press"
            android:id="@+id/shoulderPressText"
            android:layout_below="@+id/sideLatRaiseDetail"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 sets of 10 repetitions."
            android:id="@+id/shoulderPressDetail"
            android:layout_below="@+id/sideLatRaiseDetail"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shoulderpressImage"
            android:layout_below="@+id/shoulderPressDetail"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:src="@drawable/shoulderpress" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/BBBack"
            android:layout_gravity="left|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Complete!"
            android:id="@+id/completeDay5bb"
            android:layout_gravity="right|bottom" />


    </LinearLayout>>

    </ScrollView>

</FrameLayout>
