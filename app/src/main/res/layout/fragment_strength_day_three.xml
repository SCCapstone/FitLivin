<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.StrengthDayThree"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deadlift
 - Hepburn Method"
        android:id="@+id/squat"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="175dp"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|top"
        android:layout_marginBottom="150dp"
        android:src="@drawable/deadlift" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dumbbell Rows"
        android:id="@+id/dbrow"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:id="@+id/legpresspic"
        android:layout_gravity="right|center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/dbrow" />

    <TextView
        android:layout_width="219dp"
        android:layout_height="63dp"
        android:text="Barbell Shrugs"
        android:id="@+id/shrug"
        android:layout_gravity="bottom|center_vertical"
        android:layout_marginBottom="100dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="179dp"
        android:layout_height="120dp"
        android:id="@+id/shrugpic"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="60dp"
        android:src="@drawable/shrug" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/Sday3BACK"
        android:layout_gravity="center_horizontal|bottom" />

    </LinearLayout>>

    </ScrollView>

</FrameLayout>
