<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"

    >



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#212121">

        </ScrollView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#212121"
        android:layout_gravity="right|top">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Bench (lbs):"
    android:id="@+id/benchText"
    android:layout_gravity="left|top"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:gravity="right|center_vertical"
    android:layout_alignTop="@+id/userBench"
    android:layout_centerHorizontal="true"


    />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Set Bench"
            android:id="@+id/setBench"
            android:background="#e70b0e"
            android:textColor="#ffffff"
            android:layout_below="@+id/benchText"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userBench"
            android:layout_gravity="right|top"
            android:textColor="#e70b0e"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/benchText"
            android:layout_marginTop="10dp"
            />

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Squat (lbs):"
    android:id="@+id/squatText"
    android:layout_gravity="left|top"
            android:inputType="number"
            android:digits="1234567890"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:gravity="right|center_vertical"
            android:layout_alignTop="@+id/userSquat"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Set Squat"
            android:id="@+id/setSquat"
            android:background="#e70b0e"
            android:textColor="#ffffff"
            android:layout_below="@+id/squatText"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@+id/setBench"

            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userSquat"
        android:layout_gravity="right|top"
        android:textColor="#e70b0e"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/squatText"
        android:layout_below="@+id/setBench"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Squat (lbs):"
            android:id="@+id/deadliftText"
            android:layout_gravity="left|top"
            android:inputType="number"
            android:digits="1234567890"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="right|center_vertical"
            android:layout_alignTop="@+id/userDeadlift"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Set DeadLift"
            android:id="@+id/setDeadLift"
            android:background="#e70b0e"
            android:textColor="#ffffff"
            android:layout_below="@+id/deadliftText"
            android:layout_alignStart="@+id/setBench"
            android:layout_marginBottom="10dp"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userDeadlift"
        android:layout_gravity="right|center_vertical"
        android:textSize="20dp"
        android:textColor="#e70b0e"
        android:layout_toEndOf="@+id/deadliftText"
        android:layout_below="@+id/setSquat"

            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mile time (sec):"
            android:id="@+id/mileText"
            android:layout_gravity="left|top"
            android:inputType="number"
            android:digits="1234567890"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="right|center_vertical"
            android:layout_alignTop="@+id/userTime"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Set MileTime"
            android:id="@+id/setMileTime"
            android:background="#e70b0e"
            android:textColor="#ffffff"
            android:layout_below="@+id/mileText"
            android:layout_alignStart="@+id/setBench" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userTime"
        android:layout_gravity="right|top"
        android:textColor="#e70b0e"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_toEndOf="@+id/mileText"
        android:layout_below="@+id/setDeadLift"
            />


    </RelativeLayout>
</FrameLayout>
