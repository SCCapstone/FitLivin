<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background3"
    >



        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Bench (lbs):"
        android:id="@+id/benchText"
        android:layout_gravity="left|top"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="right|center_vertical"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Bench"
                android:id="@+id/setBench"
                android:gravity="right|center_vertical"
                android:layout_below="@+id/benchText"/>

            <TextView
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/userBench"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/benchText"
            android:layout_below="@+id/textView2"
                android:layout_marginTop="20dp"/>


            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Squat (lbs):"
        android:id="@+id/squatText"
        android:layout_gravity="left|top"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="right|center_vertical"
        android:layout_below="@+id/setBench"
        android:layout_marginTop="10dp"
        />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Squat"
                android:id="@+id/setSquat"
                android:layout_below="@+id/squatText"
                android:layout_alignParentStart="true" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userSquat"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/squatText"
            android:layout_below="@+id/setBench"
                android:layout_marginTop="10dp"/>

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current DeadLift (lbs):"
        android:id="@+id/deadliftText"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/setSquat"
        android:layout_marginTop="10dp"
        />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set DeadLift"
                android:id="@+id/setDeadLift"
                android:layout_below="@+id/deadliftText"
                android:layout_alignParentStart="true" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userDeadlift"
            android:layout_gravity="right|center_vertical"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/deadliftText"
            android:layout_below="@+id/setSquat"
                android:layout_marginTop="10dp"/>


            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MileTime (sec):"
        android:id="@+id/mileText"
        android:layout_gravity="left|top"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setDeadLift"
        android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set MileTime"
                android:id="@+id/setMileTime"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="83dp"
                android:layout_below="@+id/mileText"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userTime"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/mileText"
            android:layout_below="@+id/setDeadLift"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>>

        </ScrollView>
</FrameLayout>
