<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"
    android:background="#212121">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard:"
        android:id="@+id/LeaderTitle"
        android:textSize="20dp"
        android:background="#212121"
        android:autoText="true"
        android:textColor="#e70b0e"
        android:layout_below="@+id/points"
        android:layout_alignStart="@+id/listView4" />

        <ListView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:id="@+id/listView4"
            android:divider="#212121"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:dividerHeight="10dp"
            android:textStyle="normal|italic"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/LeaderTitle"
            android:layout_above="@+id/arnoldQuote"
            android:touchscreenBlocksFocus="false"
            android:background="#e70b0e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Strength does not come from winning. Your struggles develop your strengths. When you go through hardships and decide not to surrender, that is strength.&quot;"
            android:id="@+id/arnoldQuote"
            android:layout_gravity="center"
            android:textStyle="normal|bold|italic"
            android:textColor="#e70b0e"
            android:layout_above="@+id/arnoldText"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="-Arnold Schwarzenegger"
            android:id="@+id/arnoldText"
            android:textColor="#e70b0e"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are ranked # "
        android:id="@+id/YouAre"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/position"
        android:textColor="#e8b91a"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/YouAre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with "
        android:id="@+id/with"
        android:textColor="#ffffff"
        android:layout_below="@+id/YouAre"
        android:layout_toLeftOf="@+id/PointsView"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PointsView"
        android:layout_gravity="center_vertical"
        android:textColor="#e70b0e"
        android:text="Points"
        android:layout_below="@+id/YouAre"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" points!"
        android:id="@+id/points"
        android:textColor="#ffffff"
        android:layout_toEndOf="@+id/PointsView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/YouAre"/>


</RelativeLayout>



