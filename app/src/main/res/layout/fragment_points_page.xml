<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="POINTS"
        android:id="@+id/pointsHeadingView"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/PointsBack"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You have:"
        android:id="@+id/youHavePointsView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:background="#060605"
        android:layout_gravity="left|top"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="157dp"
        android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/PointsView"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#ffffff"
        android:layout_marginTop="126dp"
        android:text="Points"
        android:textSize="20dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="347dp"
        android:layout_height="84dp"
        android:text="&quot;Strength does not come from winning. Your struggles develop your strengths. When you go through hardships and decide not to surrender, that is strength.&quot;"
        android:id="@+id/arnoldQuote"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textStyle="normal|bold|italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="178dp"
        android:layout_height="92dp"
        android:text="-Arnold Schwarzenegger"
        android:layout_marginTop="150dp"
        android:id="@+id/arnoldText"
        android:textColor="#ffffff"
        android:layout_gravity="right|center_vertical" />#ffffff" />

</FrameLayout>
