<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.StrengthDayFour"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Grip Bench"
            android:id="@+id/cpbench"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/closegrip"
            android:layout_below="@+id/cpbench"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barbell Curl"
            android:id="@+id/benchDetail"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:layout_below="@+id/imageView"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbcurl"
            android:src="@drawable/barbellcurl"
            android:layout_below="@+id/benchDetail"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tricep Pushdown"
            android:id="@+id/flyText"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:layout_below="@+id/bbcurl"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pushdown"
            android:src="@drawable/pushdown"
            android:layout_below="@+id/flyText"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/Sday4BACK"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/calfpresspic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />









    </LinearLayout>>

    </ScrollView>

</FrameLayout>
