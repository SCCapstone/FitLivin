<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"
    android:background="#212121"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linview"
        android:background="#212121">


        <Button
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Maintain"
            android:id="@+id/maintainButton"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:background="#e70b0e"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="55dp"
            android:text=" "
            android:id="@+id/view1"
            android:textColor="#000100"
            android:layout_above="@+id/lowText"
            android:layout_toLeftOf="@+id/maintainButton"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Weight Loss"
            android:id="@+id/wlossButton"
            android:textColor="#ffffff"
            android:background="#e70b0e"
            android:layout_above="@+id/lowText"
            android:layout_toLeftOf="@+id/view1"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="55dp"
            android:text=" "
            android:id="@+id/view2"
            android:textColor="#000100"
            android:layout_above="@+id/lowText"
            android:layout_toRightOf="@+id/maintainButton"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Weight Gain"
            android:id="@+id/wGainButton"
            android:background="#e70b0e"
            android:textColor="#ffffff"
            android:layout_above="@+id/lowText"
            android:layout_toRightOf="@+id/view2"
            android:allowUndo="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Physical Activity:"
            android:id="@+id/lowText"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/wlossButton"
            android:layout_below="@+id/maintainButton"
            android:textSize="20dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/lowCalories"
            android:textSize="20dp"
            android:layout_below="@+id/lowText"
            android:layout_alignStart="@+id/wlossButton"
            android:textColor="#e70b0e"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" calories needed a day."
            android:id="@+id/lowMessage"
            android:layout_below="@+id/lowText"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/lowCalories"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate Physical Activity:"
            android:id="@+id/modText"
            android:textColor="#ffffff"
            android:layout_alignStart="@+id/wlossButton"
            android:layout_below="@+id/lowMessage"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/modCalories"
            android:layout_alignStart="@+id/wlossButton"
            android:textSize="20dp"
            android:layout_below="@+id/modText"
            android:textColor="#e70b0e"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= " calories needed a day."
            android:id="@+id/modMessage"
            android:layout_below="@+id/modText"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/modCalories"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Physical Activity:"
            android:id="@+id/highText"
            android:textColor="#ffffff"
            android:layout_alignStart="@+id/wlossButton"
            android:layout_below="@+id/modMessage"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/highCalories"
            android:layout_below="@+id/highText"
            android:textColor="#e70b0e"
            android:textSize="20dp"
            android:layout_alignStart="@+id/wlossButton"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= " calories needed a day."
            android:id="@+id/highMessage"
            android:textSize="20dp"
            android:layout_below="@+id/highText"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/highCalories" />



    </RelativeLayout>

</FrameLayout>

