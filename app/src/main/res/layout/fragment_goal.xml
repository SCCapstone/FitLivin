<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="edu.sc.FitLivin.GoalFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Loss Goal (lbs): "
            android:id="@+id/editnametext"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Weight"
                android:id="@+id/setWeight"
                android:layout_below="@+id/editnametext"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentWeightGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/editnametext"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Gain Goal (lbs): "
            android:id="@+id/weightGain"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/setWeight"
            android:layout_marginTop="10dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Weight"
                android:id="@+id/setWeightG"
                android:layout_below="@+id/weightGain"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentWeightGainGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/weightGain"
            android:layout_below="@+id/setWeight"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bench Goal (lbs): "
            android:id="@+id/BenchText"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/setWeightG"
            android:layout_marginTop="10dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Bench"
                android:id="@+id/setBench"
                android:layout_below="@+id/BenchText"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentBenchGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/BenchText"
            android:layout_below="@+id/setWeightG"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squat Goal (lbs): "
            android:id="@+id/SquatText"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/setBench"
            android:layout_marginTop="10dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Squat"
                android:id="@+id/setSquat"
                android:layout_below="@+id/SquatText"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentSquatGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/SquatText"
            android:layout_below="@+id/setBench"
            android:layout_marginTop="10dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeadLift Goal (lbs): "
            android:id="@+id/DeadLiftText"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/setSquat"
            android:layout_marginTop="10dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set DeadLift"
                android:id="@+id/setDeadLift"
                android:layout_below="@+id/DeadLiftText"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentDeadLiftGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/DeadLiftText"
            android:layout_below="@+id/setSquat"
            android:layout_marginTop="10dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MileTime Goal (sec): "
            android:id="@+id/MileTimeText"
            android:layout_gravity="left|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/setDeadLift"
            android:layout_marginTop="10dp"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set MileTime"
                android:id="@+id/setMileTime"
                android:layout_below="@+id/MileTimeText"
                android:layout_alignParentStart="true"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentMileTimeGoal"
            android:layout_gravity="right|top"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textIsSelectable="true"
            android:layout_toEndOf="@+id/MileTimeText"
            android:layout_below="@+id/setDeadLift"
            android:layout_marginTop="10dp"
            />


        </RelativeLayout>>

</ScrollView>
</FrameLayout>



