<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.BodyBuildingDayThree"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background3"

    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BODY BUILDING DAY 3"
            android:id="@+id/bbDay3"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"

            android:layout_above="@+id/hammercurlText"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hammer Curl"
        android:id="@+id/hammercurlText"
        android:layout_gravity="left|center_vertical"

        android:textColor="#ffffff"
        android:textSize="25dp" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/hammerCurlImage"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/hammercurl"
            android:layout_below="@+id/hammercurlText"
            android:layout_above="@+id/hammerCurlDetail"
            android:layout_weight="0.03" />

        <TextView
        android:layout_width="234dp"
        android:layout_height="34dp"
        android:text="4 Sets of 10-12 Repetitions. "
        android:layout_marginBottom="20dp"
        android:id="@+id/hammerCurlDetail"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff" />

        <TextView
        android:layout_width="219dp"
        android:layout_height="63dp"
        android:text="Preacher Curl"
        android:id="@+id/preacherCurlText"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
            android:layout_below="@+id/hammerCurlDetail"
            android:layout_above="@+id/preacherCurlImage"
            />

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preacherCurlImage"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="35dp"
        android:src="@drawable/preachercurl"
        android:layout_below="@+id/preacherCurlText"
        android:layout_above="@+id/preacherCurlDetail"
        />

    <TextView
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:text="4 Sets of 10-12 repititions.  "
        android:id="@+id/preacherCurlDetail"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/preacherCurlImage"
        android:layout_above="@+id/closegripPushupDetail"
        />

    <TextView
        android:layout_width="177dp"
        android:layout_height="58dp"
        android:text="4 sets of 5-15 concentrated repetitions (Depending on skill level)."
        android:id="@+id/closegripPushupDetail"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="90dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/preacherCurlDetail"
        android:layout_above="@+id/closegripPushupText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:text="Close Grip Push-up"
        android:id="@+id/closegripPushupText"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="125dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_below="@+id/closegripPushupDetail"
        android:layout_above="@+id/closegrippushupImage"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closegrippushupImage"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="70dp"
        android:src="@drawable/closegrippushup"
        android:layout_below="@+id/closegripPushupText"

        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Complete!"
        android:id="@+id/completeDay3bb"
        android:layout_gravity="right|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/BBBack"
        android:layout_gravity="left|bottom" />
    </LinearLayout>>

    </ScrollView>

</FrameLayout>
