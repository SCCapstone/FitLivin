<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.BodyBuildingDayOne"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="WEIGHT LOSS DAY 4"
                android:id="@+id/wlDay4"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1/2 mile warm up jog"
                android:id="@+id/warmupJogText"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/w1Day4"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jogginImage"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/warmupJogText"
                android:src="@drawable/jogging" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/jogginImage"
                android:id="@+id/warmupDetail"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="Choice of treadmill or laps around track" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rows"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/warmupDetail"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:id="@+id/rowText" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowImage"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/rowText"
                android:src="@drawable/rows" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Sets of 12 reps (minimal rest)"
                android:id="@+id/rowDetail"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/rowImage"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio"
                android:id="@+id/cardioText"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/rowDetail"
                android:textColor="#ffffff"
                android:textSize="32dp" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardioImage"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/cardioText"
                android:src="@drawable/cardio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 30 minutes"
                android:id="@+id/cardioDetail"
                android:layout_gravity="center_horizontal"
                android:layout_below = "@+id/cardioImage"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Complete!"
                android:id="@+id/completeDay1wl"
                android:layout_gravity="right|bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:id="@+id/WLBack"
                android:layout_gravity="left|bottom" />


        </LinearLayout>>

    </ScrollView>




</FrameLayout>