<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.BodyBuildingDayOne"
    android:id="@+id/containerFitnessP"
    android:background="#212121"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:background="#212121">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#212121">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 mile warm up run"
            android:id="@+id/warmupRunText"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="32dp"
            />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runningImage"
            android:src="@drawable/cardio"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_below="@+id/warmupRunText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choice of treadmill or laps around track"
            android:id="@+id/warmupDetail"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/runningImage"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking lunges"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/warmupDetail"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:id="@+id/walkingLungesText"
            />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lungesImage"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/walkingLungesText"
            android:clickable="true"
            android:src="@drawable/lunges"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Sets of 12 lounger per leg with 50-100 lbs on shoulders (depending on skill level)"
            android:id="@+id/lungesDetail"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/lungesImage"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jump rope"
            android:id="@+id/jumpropeText"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/lungesDetail"
            android:textColor="#ffffff"
            android:textSize="32dp"
            />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jumpRopeImage"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/jumpropeText"
            android:clickable="true"
            android:src="@drawable/jump_rope"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 sets of 30 seconds"
            android:id="@+id/jumpropeDetail"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/jumpRopeImage"
            android:textColor="#ffffff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Complete!"
            android:id="@+id/completeDay1w"
            android:layout_below = "@+id/jumpropeDetail"
            android:layout_gravity="right|bottom"
            android:background="#ff6655"
            />





    </LinearLayout>>

    </ScrollView>

</FrameLayout>