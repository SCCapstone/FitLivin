<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFitnessP"
    android:background="@drawable/background2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linview"
        >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:id="@+id/button7"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HeightV:"
        android:textSize="20dp"
        android:id="@+id/heightView"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff"
            android:layout_below="@+id/name"
            android:layout_alignStart="@+id/weightView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WeightV:"
        android:textSize="20dp"
        android:id="@+id/weightView"
        android:textColor="#ffffff"
        android:layout_below="@+id/heightView"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginTop="30dp" />


    <TextView
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:id="@+id/name"
        android:layout_gravity="left|center_vertical"
        android:textSize="25dp"
        android:text="Username"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button7" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:id="@+id/weight"
        android:inputType="number"
        android:layout_gravity="left|center_vertical"
        android:background="#ecffea"
        android:hint="Weight"
        android:layout_below="@+id/weightView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:id="@+id/height"
        android:inputType="number"
        android:layout_gravity="left|center_vertical"
        android:background="#f5ffee"
        android:hint="Height"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CurrH"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="Height"
        android:textSize="20dp"
        android:textIsSelectable="true"

        android:layout_above="@+id/weightView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CurrW"
        android:text="Weight"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_above="@+id/weight"
        android:layout_alignStart="@+id/CurrH" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/ProfileBack"
        android:layout_gravity="right|bottom"
            android:layout_alignTop="@+id/button7"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button2"
            android:layout_gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</FrameLayout>
