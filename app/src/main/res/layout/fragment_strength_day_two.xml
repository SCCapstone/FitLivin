<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.sc.FitLivin.StrengthDayTwo"
    android:id="@+id/containerFitnessP"
    android:background="#212121">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
         />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbell Squat"
                android:id="@+id/squat"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:layout_gravity="center_horizontal"
                />

            <ImageButton
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/squatImage"
                android:src="@drawable/squat"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_below="@+id/squat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5 Sets of 2 heavy (relative) reps."
                android:layout_gravity="center_horizontal"
                android:id="@+id/squatDescription"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Press"
                android:id="@+id/legpress"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/closeGripBenchImage"
                />

            <ImageButton
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/legpresspic"
                android:src="@drawable/legpress"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_below="@+id/legpress"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5 Sets of 5 reps."
                android:layout_gravity="center_horizontal"
                android:id="@+id/legPressDescrpition"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calf Press"
                android:id="@+id/flyText"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/legpresspic"
                />

            <ImageButton
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calfpresspic"
                android:src="@drawable/calfpress3"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_below="@+id/flyText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4 Sets of 8 reps."
                android:layout_gravity="center_horizontal"
                android:id="@+id/calfPressDescription"
                android:textColor="#ffffff"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Complete!"
                android:id="@+id/completeDay2s"
                android:layout_gravity="right|bottom"
                android:background="#e89633"
                />




        </LinearLayout>>

    </ScrollView>

</FrameLayout>
