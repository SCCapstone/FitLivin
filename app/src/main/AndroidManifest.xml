        <activity
            android:name="edu.sc.FitLivin.PointsPageFragment"
            android:label="@string/title_activity_points_page" >
        </activity>
        <activity
            android:name="edu.sc.FitLivin.ProfilePageFragment"
            android:label="@string/title_activity_profile__page" >
        </activity>
        <activity
            android:name="edu.sc.FitLivin.FPSTRTrainingFragment"
            android:label="@string/title_activity_fp__str__training" >
        </activity>
        <activity
            android:name="edu.sc.FitLivin.FPBodyBuildingFragment"
            android:label="@string/title_activity_fp__body__building" >
        </activity>
        <activity
            android:name="edu.sc.FitLivin.FPWGTLossFragment"
            android:label="@string/title_activity_fp__wgt__loss" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
